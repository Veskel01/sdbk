{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "extends": "//",
  "linter": {
    "rules": {
      "complexity": {
        "noBannedTypes": "off"
      },
      "suspicious": {
        // Any is used for most generic types
        "noExplicitAny": "off",
        "noConstEnum": "off"
      },
      "style": {
        "useEnumInitializers": "off",
        "noNamespace": "off"
      },
      "performance": {
        "noBarrelFile": "off"
      }
    }
  }
}
