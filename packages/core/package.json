{
  "name": "@sdbk/core",
  "description": "Core types and utilities for SurrealDBKit (sdbk).",
  "version": "0.0.1",
  "author": "Jakub Andrzejewski (Veskel01)",
  "license": "MIT",
  "packageManager": "bun@1.3.3",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/veskel01/sdbk.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/veskel01/sdbk",
  "bugs": {
    "url": "https://github.com/veskel01/sdbk/issues"
  },
  "keywords": [
    "surrealdb",
    "surrealdb.js",
    "query builder",
    "orm"
  ],
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.lib.json --pretty",
    "clean": "rimraf dist .cache .turbo node_modules",
    "clean:cache": "rimraf .cache",
    "check:types": "tsc -b --noEmit --pretty",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
