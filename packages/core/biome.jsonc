{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "extends": "//",
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "performance": {
        "noBarrelFile": "off"
      },
      "style": {
        "noNamespace": "off"
      },
      "nursery": {
        "useMaxParams": {
          "level": "warn",
          "options": {
            "max": 6
          }
        }
      }
    }
  }
}
