{
  "name": "sdbk",
  "private": true,
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "commit": "commit",
    "format": "turbo run format --parallel",
    "lint": "turbo run lint --parallel",
    "build": "turbo run build",
    "clean:workspace": "rimraf .turbo && turbo run clean",
    "clean:cache": "turbo run clean:cache",
    "check:deps": "bun outdated -r ",
    "check:lock-files": "bun ./scripts/check-lock-files.script.ts",
    "check:types": "turbo check:types --parallel",
    "update:deps": "bun update --latest -r -i",
    "test": "turbo run test --parallel",
    "test:watch": "turbo run test:watch --parallel"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/format": "20.0.0",
    "@commitlint/prompt-cli": "20.1.0",
    "@commitlint/types": "20.0.0",
    "@types/bun": "1.3.3",
    "husky": "9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "0.46.0",
    "rimraf": "6.1.2",
    "turbo": "2.6.1",
    "typescript": "5.9.3",
    "ultracite": "6.3.6"
  }
}
